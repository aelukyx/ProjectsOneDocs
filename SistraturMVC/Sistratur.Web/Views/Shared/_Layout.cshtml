<!DOCTYPE html>
<html lang="es">
    <head>
<meta http-equiv="Content-Type" content="text/html; charset=utf-8"/>
        <meta charset="utf-8" />
        <title>@ViewBag.Title - Mi aplicación ASP.NET MVC</title>
        <link href="~/favicon.ico" rel="shortcut icon" type="image/x-icon" />
        <meta name="viewport" content="width=device-width" />
        @Styles.Render("~/Content/css")
            <link href="@Url.Content("~/Content/css/bootstrap.css")" rel="stylesheet">
            <link href="@Url.Content("~/Content/css/bootstrap-select.css")" rel="stylesheet">
            <link href="@Url.Content("~/Content/css/calendar.css")" rel="stylesheet">
            <link href="@Url.Content("~/Content/css/bootstrap-formhelpers.min.css")" rel="stylesheet">
        @Scripts.Render("~/bundles/modernizr")
    </head>
    <body>
        <header>
            <div class="content-wrapper">
                <div class="float-left">
                    <h3>
                        <p class="site-title" style="padding-bottom:10px">
                            <img src="~/Content/images/naviLogo.jpg" width="70px"/>&nbsp;
                            @Html.ActionLink("SISTRATUR!", "Index", "Home")
                        </p>
                    </h3>
                </div>
                <div class="float-right">
                    <section id="login">
                        @Html.Partial("_LoginPartial")
                    </section>
                    <nav>
                        <ul id="menu">
                            <li>@Html.ActionLink("Inicio", "Index", "Home")</li>
                            <li>@Html.ActionLink("Cliente", "Index", "Cliente")</li>
                            <li>@Html.ActionLink("Proveedor", "Index", "Proveedor")</li>
                            <li>@Html.ActionLink("Vehículos", "Index", "Auto")</li>
                            <li>@Html.ActionLink("Alquiler", "Index", "Alquiler")</li>
                        </ul>
                    </nav>
                </div>
            </div>
        </header>
        <div id="body">
            @RenderSection("featured", required: false)
            <section class="content-wrapper main-content clear-fix">
                @RenderBody()
            </section>
        </div>
        <footer>
            <div class="content-wrapper">
                <div class="float-left">
                    <p>&copy; @DateTime.Now.Year - Mi aplicación ASP.NET MVC</p>
                </div>
            </div>
        </footer>

        @Scripts.Render("~/bundles/jquery")
            <script src="@Url.Content("~/Scripts/jquery-1.11.1.min.js")" type="text/javascript"></script>
            <script src="@Url.Content("~/Scripts/bootstrap.min.js")" type="text/javascript"></script>
            <script src="@Url.Content("~/Scripts/bootstrap-select.js")" type="text/javascript"></script>
            <script src="@Url.Content("~/Scripts/jquery-1.10.2.js")" type="text/javascript"></script>
            <script src="@Url.Content("~/Scripts/jquery-ui.js")" type="text/javascript"></script>
            <script src="@Url.Content("~/Scripts/bootstrap-formhelpers.js")" type="text/javascript"></script>
        @RenderSection("scripts", required: false)
    </body>
</html>
